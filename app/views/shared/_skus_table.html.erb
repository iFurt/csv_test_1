<% if skus.any? %>
  <table class="table table-sm">
    <caption><%= t('.caption') %></caption>
    <thead>
      <tr>
        <% Sku.attribute_names.each do |attr_name| %>
          <th><%= Sku.human_attribute_name(attr_name) %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% skus.each do |sku| %>
        <tr>
          <% Sku.attribute_names.each do |attr_name| %>
            <td><%= sku.public_send(attr_name) %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate skus %>
<% else %>
  <h5 class="text-center"><%= t('.no_records_found') %></h5>
<% end %>
